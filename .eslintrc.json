{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": ["plugin:prettier/recommended"],

	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint", "prettier"],
	"rules": {
		"no-console": "off",
		"class-methods-use-this": "off",
		"camelcase": "off",
		"import/prefer-default-export": "off",
		"import/extensions": [
			"off",
			"ignorePackages",
			{
				"ts": "never"
			}
		]
	},
	"settings": {
		"import/resolver": {
			"typescript": {}
		}
	}
}
